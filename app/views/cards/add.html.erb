<h1 class="display-4 text-primary">Cards#add</h1>

<%= form_for(@card,url:{controller:'cards',
    action:'add'}) do |form| %>
    <div class="form-group">
      <label for="title">タイトル</label>
      <%= form.text_field:title,{class:"form-controll"}%>
    </div>
    <div class="form-group">
      <label for="author">著者</label>
      <%= form.text_field:author,{class:"form-controll"}%>
    </div>
    <div class="form-group">
      <label for="price">価格</label>
      <%= form.text_field:price,{class:"form-controll"}%>
    </div>
    <div class="form-group">
      <label for="publisher">出版社</label>
      <%= form.text_field:publisher,{class:"form-controll"}%>
    </div>
    <div class="form-group">
      <label for="memo">コメント</label>
      <%= form.text_area:memo,{rows:5,class::"form-controll"}%>
    </div>

    <% form.sumit "保存" %>
<% end>
<p class="link"><a href="/cards">
  &lt;&lt; ※トップページに戻る</a></p>


  